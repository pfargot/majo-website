#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Get staged files
JS_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx)$' || true)
PRETTIER_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx|css|scss|json|md|yaml|yml)$' || true)

# Run ESLint only on staged JS files
if [ -n "$JS_FILES" ]; then
  echo "ğŸ” Running ESLint on staged JavaScript files..."
  if ! npx eslint --fix $JS_FILES; then
    echo "âŒ ESLint found issues that couldn't be automatically fixed"
    exit 1
  fi
  echo "âœ… ESLint checks passed"
else
  echo "â„¹ï¸  No JavaScript files to lint"
fi

# Run Prettier only on staged formattable files
if [ -n "$PRETTIER_FILES" ]; then
  echo "ğŸ’… Running Prettier on staged files..."
  if ! npx prettier --write $PRETTIER_FILES; then
    echo "âŒ Prettier formatting failed"
    exit 1
  fi
  echo "âœ… Prettier formatting complete"
else
  echo "â„¹ï¸  No files need formatting"
fi

# Stage any files that were auto-fixed
git add $JS_FILES $PRETTIER_FILES

# Run quick tests only on affected files
if [ -n "$JS_FILES" ]; then
  echo "ğŸ§ª Running tests related to changed files..."
  if ! npm run test:quick $JS_FILES; then
    echo "âŒ Tests failed"
    exit 1
  fi
  echo "âœ… All tests passed"
else
  echo "â„¹ï¸  No JavaScript changes to test"
fi

# Run build command
echo "ğŸ—ï¸  Building project..."
if ! npm run build; then
  echo "âŒ Build failed"
  exit 1
fi

# Stage build artifacts if they changed
if [ -n "$(git diff --name-only build/)" ]; then
  echo "ğŸ“¦ Build files changed, staging updates..."
  git add build/
  echo "âœ… Build artifacts staged"
else
  echo "â„¹ï¸  No build artifacts changed"
fi

echo "âœ¨ All pre-commit checks passed successfully!"
